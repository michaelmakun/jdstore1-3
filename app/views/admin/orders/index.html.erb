<script src="//cdn.bootcss.com/Chart.js/2.5.0/Chart.bundle.js"></script>

<canvas id="myChart" width="400" height="400"></canvas>
<script>
var ctx = document.getElementById("myChart");
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: <%= raw @dates.to_json %>,
        datasets: [{
            label: '# of Orders',
            data: <%= raw @date.to_json %>,
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255,99,132,1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});
</script>


<h2>订单列表</h2>

<%= form_tag admin_orders_path, :method => :get do %>

  <%= label_tag :total %>
  <%= text_field_tag :total %>

  <%= label_tag :ids %>
  <%= text_field_tag :ids %>

  <%= date_field_tag :date %>
  <%= submit_tag "Submit" %>

<% end %>

<p>
   <%= link_to "all", admin_orders_path, class: "btn btn-success pull-right" %>
   <%= link_to "pending", admin_orders_path( :status => "pending" ) %>
   <%= link_to "done", admin_orders_path( :status => "done" ) %>
</p>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>生成时间</th>
      <th>订购者</th>
      <th>订单状态</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to(order.id, admin_order_path(order)) %></td>
        <td><%= order.created_at.to_s(:long) %></td>
        <td><%= order.billing_name %></td>
        <td><%= order.aasm_state %></td>
      </tr>
    <% end %>
  </tbody>
</table>
